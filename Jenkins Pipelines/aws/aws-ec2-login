pipeline {
    agent any

    environment {
        EC2_INSTANCE_IP = 'your-ec2-instance-public-ip'
        SSH_CREDENTIALS_ID = 'your-ssh-credentials-id'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout from SCM
                checkout scm
            }
        }

        stage('Run Command on EC2') {
            steps {
                script {
                    sshagent([env.SSH_CREDENTIALS_ID]) {
                        sh """
                            ssh -o StrictHostKeyChecking=no ec2-user@${env.EC2_INSTANCE_IP} 'whoami'
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            // Any cleanup or notification steps
        }
    }
}
