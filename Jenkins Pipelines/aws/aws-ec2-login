pipeline {
    agent {node { label 'Agent - 54.87.134.2'}}

    environment {
        // Define the AWS environment here
        EC2_INSTANCE_IP = '54.87.134.2'
        SSH_CREDENTIALS_ID = 'jenkins-aws'
    }

    stages {
        stage('run commands on AWS EC2') {
            steps {
                script {
                    // SSH into the EC2 instance and run multiple commands
                    sshagent([SSH_CREDENTIALS_ID]) {
                        sh '''
                            #!/bin/bash
                            echo "Starting SSH connection..."
                            echo "EC2 IP: ${EC2_INSTANCE_IP}"

                            ssh -o StrictHostKeyChecking=no ubuntu@${EC2_INSTANCE_IP} <<`EOF`
                                echo "Hey I am $(whoami) successfully logged in to $(hostname)"
                                
                                echo "The memory space of this instance:"
                                free -m
                                
                                echo "The disk space is:"
                                df -h
                                
                                echo "Installing Java"
                                sudo apt install default-jdk 

                                echo "All commands executed successfully, thanks"
                            
                        '''
                    }
                }
            }
        }
        stage('generate report') {
            steps {
                script {
                    //Generate the report here
                    sh 'echo "Build report content" > build-report.txt'
                }
            }
        }
    }

    post {
        success {
            emailext attachmentsPattern: '**/build-report.txt',
            body: '''The Build body was successful.

            please find the attached build report.''',
            subject: 'Build Success - ${JENKINS_JOB_NAME} #$    {BUILD_NUMBER}',
            to: 'rkreddy.aleti@gmail.com'
        }
        failure {
            emailext attachmentsPattern: '**/build-report.txt',
            body: '''The Build body was failed.

            please find the attached build report.''',
            subject: 'Build Failed - ${JENKINS_JOB_NAME} #$    {BUILD_NUMBER}',
            to: 'rkreddy.aleti@gmail.com'
        }
        
    }
}
