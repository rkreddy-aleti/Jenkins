pipeline {
    agent any

    environment {
        //Define the AWS environment here
        EC2_INSTANCE_IP = '54.152.102.140'
        SSH_CREDENTIALS_ID = 'rkreddy-aws-cred'
    }

    stages {
        stage('Run a command on EC2') {
            steps {
                //SSH into a EC2 EC2_INSTANCE
                sshagent([env.SSH_CREDENTIALS_ID]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ubuntu@${env.EC2_INSTANCE_IP} 'echo Hello from EC2'
                    '''
                }
            }
        }
    }
}

